<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/black">

    <android.support.design.widget.AppBarLayout
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:textColor="@color/black"
                android:visibility="visible"/>

    </android.support.design.widget.AppBarLayout>
    <EditText
            android:layout_width="340dp"
            android:layout_height="43dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:textColorHint="@color/yellow"
            android:id="@+id/username"
            android:background="@drawable/round"
            android:textColor="@color/yellow"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="80dp"
            android:hint="Email"
            android:layout_marginRight="80dp"/>
    <EditText
            android:textColor="@color/yellow"
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:inputType="textPassword"
            android:textColorHint="@color/yellow"
            android:ems="10"
            android:id="@+id/password"
            android:layout_marginTop="400dp"
            android:background="@drawable/round"
            android:layout_marginLeft="80dp"
            android:hint="Password" android:layout_marginRight="80dp"/>
    <Button
            android:text="login"
            android:radius="10dp"
            android:background="@drawable/buttonround"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/login"
            android:layout_marginTop="490dp" android:layout_marginLeft="140dp" android:layout_marginRight="140dp"/>
    <Button
            android:text="Sign Up"
            android:radius="10dp"
            android:background="@drawable/buttonround"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/signUp" android:layout_marginTop="560dp"
            android:gravity="center" android:layout_marginLeft="140dp" android:layout_marginRight="140dp"/>
    <ImageView
            android:layout_width="500dp"
            android:layout_height="200dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imaging"
            android:layout_marginTop="80dp"
            android:elevation="0dp"/>

</RelativeLayout>